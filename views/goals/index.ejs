<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Günlük Hedefler - DiniSohbet</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="goals-page">
        <!-- Başlık ve İstatistikler -->
        <div class="goals-header">
            <div class="header-icon-bg">
                <i class="fas fa-bullseye"></i>
            </div>
            <h1>Günlük Hedeflerim</h1>
            <p class="goals-subtitle">İlerlemenizi takip edin, hedeflerinize ulaşın ve rozet kazanın!</p>
        </div>

        <div class="container">
            <!-- Kullanıcı İstatistikleri -->
            <div class="user-stats-grid">
                <div class="stat-card streak-card">
                    <div class="stat-icon">
                        <i class="fas fa-fire"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= user.stats.currentStreak %></h3>
                        <p>Günlük Seri</p>
                        <small>En uzun: <%= user.stats.longestStreak %> gün</small>
                    </div>
                </div>

                <div class="stat-card points-card">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= user.stats.totalPoints %></h3>
                        <p>Toplam Puan</p>
                        <small><%= user.achievements.length %> rozet kazanıldı</small>
                    </div>
                </div>

                <div class="stat-card quran-card">
                    <div class="stat-icon">
                        <i class="fas fa-book-quran"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= user.stats.totalAyahsRead %></h3>
                        <p>Ayet Okundu</p>
                        <small>Toplam okuma</small>
                    </div>
                </div>

                <div class="stat-card hadith-card">
                    <div class="stat-icon">
                        <i class="fas fa-scroll"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= user.stats.totalHadithsRead %></h3>
                        <p>Hadis Okundu</p>
                        <small>Toplam okuma</small>
                    </div>
                </div>
            </div>

            <!-- Aktif Hedefler -->
            <div class="goals-section">
                <div class="section-header">
                    <h2><i class="fas fa-target"></i> Aktif Hedeflerim</h2>
                    <button class="btn-primary" onclick="toggleCreateGoalForm()">
                        <i class="fas fa-plus"></i> Yeni Hedef
                    </button>
                </div>

                <!-- Hedef Oluşturma Formu -->
                <div id="create-goal-form" class="create-goal-form" style="display: none;">
                    <h3><i class="fas fa-plus-circle"></i> Yeni Hedef Oluştur</h3>
                    <form action="/goals/create" method="POST">
                        <div class="form-grid">
                            <div class="form-group">
                                <label>Hedef Türü:</label>
                                <select name="type" required>
                                    <option value="daily">Günlük</option>
                                    <option value="weekly">Haftalık</option>
                                    <option value="monthly">Aylık</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Kategori:</label>
                                <select name="category" required>
                                    <option value="quran">Kuran Okuma</option>
                                    <option value="hadith">Hadis Okuma</option>
                                    <option value="dua">Dua Okuma</option>
                                    <option value="prayer">Namaz Takibi</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Birim:</label>
                                <select name="unit" required>
                                    <option value="ayah">Ayet</option>
                                    <option value="page">Sayfa</option>
                                    <option value="surah">Sure</option>
                                    <option value="hadith">Hadis</option>
                                    <option value="dua">Dua</option>
                                    <option value="prayer">Namaz</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Hedef Sayı:</label>
                                <input type="number" name="target" min="1" required placeholder="Örn: 10">
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-check"></i> Hedef Oluştur
                            </button>
                            <button type="button" class="btn-secondary" onclick="toggleCreateGoalForm()">
                                <i class="fas fa-times"></i> İptal
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Hedefler Listesi -->
                <div class="goals-grid">
                    <% if (goals && goals.length > 0) { %>
                        <% goals.forEach(goal => { %>
                            <div class="goal-card <%= goal.completed ? 'completed' : '' %>" data-goal-id="<%= goal._id %>">
                                <div class="goal-header">
                                    <div class="goal-icon <%= goal.category %>">
                                        <% if (goal.category === 'quran') { %>
                                            <i class="fas fa-book-quran"></i>
                                        <% } else if (goal.category === 'hadith') { %>
                                            <i class="fas fa-scroll"></i>
                                        <% } else if (goal.category === 'dua') { %>
                                            <i class="fas fa-hands-praying"></i>
                                        <% } else if (goal.category === 'prayer') { %>
                                            <i class="fas fa-mosque"></i>
                                        <% } %>
                                    </div>
                                    <div class="goal-type-badge <%= goal.type %>">
                                        <%= goal.type === 'daily' ? 'Günlük' : goal.type === 'weekly' ? 'Haftalık' : 'Aylık' %>
                                    </div>
                                </div>

                                <div class="goal-content">
                                    <h3 class="goal-title">
                                        <%= goal.target %> <%= goal.unit === 'ayah' ? 'Ayet' : 
                                            goal.unit === 'page' ? 'Sayfa' :
                                            goal.unit === 'surah' ? 'Sure' :
                                            goal.unit === 'hadith' ? 'Hadis' :
                                            goal.unit === 'dua' ? 'Dua' : 'Namaz' %>
                                    </h3>
                                    <p class="goal-category">
                                        <%= goal.category === 'quran' ? 'Kuran Okuma' :
                                            goal.category === 'hadith' ? 'Hadis Okuma' :
                                            goal.category === 'dua' ? 'Dua Okuma' : 'Namaz Takibi' %>
                                    </p>

                                    <div class="goal-progress">
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: <%= goal.completionPercentage %>%"></div>
                                        </div>
                                        <div class="progress-text">
                                            <span><%= goal.progress %> / <%= goal.target %></span>
                                            <span class="percentage"><%= goal.completionPercentage %>%</span>
                                        </div>
                                    </div>

                                    <% if (goal.streak > 0) { %>
                                    <div class="goal-streak">
                                        <i class="fas fa-fire"></i> <%= goal.streak %> günlük seri
                                    </div>
                                    <% } %>

                                    <% if (goal.completed) { %>
                                    <div class="goal-completed-badge">
                                        <i class="fas fa-check-circle"></i> Tamamlandı!
                                    </div>
                                    <% } %>
                                </div>

                                <div class="goal-actions">
                                    <% if (!goal.completed) { %>
                                    <button class="btn-progress" onclick="updateProgress('<%= goal._id %>', 1)">
                                        <i class="fas fa-plus"></i> İlerleme Kaydet
                                    </button>
                                    <% } %>
                                    <button class="btn-delete" onclick="deleteGoal('<%= goal._id %>')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <% if (goal.endDate) { %>
                                <div class="goal-deadline">
                                    <i class="fas fa-clock"></i> 
                                    Bitiş: <%= new Date(goal.endDate).toLocaleDateString('tr-TR') %>
                                </div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-goals">
                            <i class="fas fa-bullseye"></i>
                            <h3>Henüz hedef oluşturmadınız</h3>
                            <p>Kuran okuma, hadis çalışma veya namaz takibi için hedefler oluşturun!</p>
                            <button class="btn-primary" onclick="toggleCreateGoalForm()">
                                <i class="fas fa-plus"></i> İlk Hedefinizi Oluşturun
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Rozetler Bölümü -->
            <div class="achievements-section">
                <h2><i class="fas fa-trophy"></i> Rozetler</h2>
                
                <div class="achievements-grid">
                    <% allAchievements.forEach(achievement => { 
                        const isUnlocked = unlockedAchievementIds.includes(achievement._id.toString());
                    %>
                        <div class="achievement-card <%= isUnlocked ? 'unlocked' : 'locked' %> <%= achievement.rarity %>">
                            <div class="achievement-icon" style="color: <%= achievement.color %>">
                                <i class="<%= achievement.icon %>"></i>
                                <% if (isUnlocked) { %>
                                <div class="achievement-check">
                                    <i class="fas fa-check"></i>
                                </div>
                                <% } else { %>
                                <div class="achievement-lock">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <% } %>
                            </div>
                            <h4><%= achievement.name %></h4>
                            <p><%= achievement.description %></p>
                            <div class="achievement-meta">
                                <span class="achievement-points">
                                    <i class="fas fa-star"></i> <%= achievement.points %> puan
                                </span>
                                <span class="achievement-rarity <%= achievement.rarity %>">
                                    <%= achievement.rarity === 'common' ? 'Yaygın' :
                                        achievement.rarity === 'rare' ? 'Nadir' :
                                        achievement.rarity === 'epic' ? 'Epik' : 'Efsanevi' %>
                                </span>
                            </div>
                            <% if (!isUnlocked) { %>
                            <div class="achievement-requirement">
                                Gereksinim: <%= achievement.requirement %> 
                                <%= achievement.requirementType === 'streak' ? 'gün seri' :
                                    achievement.requirementType === 'total_ayahs' ? 'ayet' :
                                    achievement.requirementType === 'total_hadiths' ? 'hadis' :
                                    achievement.requirementType === 'total_duas' ? 'dua' : 'hedef' %>
                            </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        function toggleCreateGoalForm() {
            const form = document.getElementById('create-goal-form');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }

        async function updateProgress(goalId, amount) {
            try {
                const response = await fetch(`/goals/${goalId}/progress`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ amount })
                });

                const data = await response.json();
                
                if (data.success) {
                    // Sayfayı yenile
                    location.reload();
                }
            } catch (error) {
                console.error('İlerleme güncelleme hatası:', error);
                alert('Bir hata oluştu');
            }
        }

        async function deleteGoal(goalId) {
            if (!confirm('Bu hedefi silmek istediğinizden emin misiniz?')) {
                return;
            }

            try {
                const response = await fetch(`/goals/${goalId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();
                
                if (data.success) {
                    location.reload();
                }
            } catch (error) {
                console.error('Hedef silme hatası:', error);
                alert('Bir hata oluştu');
            }
        }
    </script>

