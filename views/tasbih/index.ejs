    <script>
        // LocalStorage keys
        const COUNTER_KEY = 'tasbih_counter';
        const TOTAL_KEY = 'tasbih_total';
        const ROUND_KEY = 'tasbih_round';
        const TARGET_KEY = 'tasbih_target';
        const STATS_KEY = 'tasbih_stats';
        const SETTINGS_KEY = 'tasbih_settings';
        const CURRENT_DHIKR_KEY = 'tasbih_current';

        // State
        let counter = parseInt(localStorage.getItem(COUNTER_KEY) || '0');
        let total = parseInt(localStorage.getItem(TOTAL_KEY) || '0');
        let round = parseInt(localStorage.getItem(ROUND_KEY) || '0');
        let target = parseInt(localStorage.getItem(TARGET_KEY) || '33');
        let currentDhikr = JSON.parse(localStorage.getItem(CURRENT_DHIKR_KEY) || '{"id":"subhanallah","arabic":"ÿ≥Ÿèÿ®Ÿíÿ≠ŸéÿßŸÜŸé ÿßŸÑŸÑŸáŸê","meaning":"Subhanallah - Allah\'ƒ± tespih ederim"}');
        
        // Settings
        let settings = JSON.parse(localStorage.getItem(SETTINGS_KEY) || '{"vibration":true,"sound":true}');
        
        // Stats
        let stats = JSON.parse(localStorage.getItem(STATS_KEY) || '{"today":0,"week":0,"allTime":0,"lastDate":"","streak":0}');

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateDisplay();
            updateStats();
            updateSettingsUI();
            checkStreak();
        });

        function incrementCounter() {
            counter++;
            total++;
            
            // Update today's count
            const today = new Date().toDateString();
            if (stats.lastDate !== today) {
                stats.today = 0;
                stats.lastDate = today;
            }
            stats.today++;
            stats.week++;
            stats.allTime++;

            // Check if target reached
            if (counter >= target) {
                counter = 0;
                round++;
                targetReached();
            }

            // Vibration
            if (settings.vibration && 'vibrate' in navigator) {
                navigator.vibrate(50);
            }

            // Sound
            if (settings.sound) {
                playClickSound();
            }

            saveData();
            updateDisplay();
            animateButton();
        }

        function resetCounter() {
            if (confirm('Sayacƒ± sƒ±fƒ±rlamak istediƒüinizden emin misiniz?')) {
                counter = 0;
                round = 0;
                saveData();
                updateDisplay();
            }
        }

        function targetReached() {
            // Celebration effect
            if (settings.vibration && 'vibrate' in navigator) {
                navigator.vibrate([200, 100, 200]);
            }
            
            if (settings.sound) {
                playSuccessSound();
            }

            // Show notification
            showNotification('üéâ Hedef Tamamlandƒ±!', `${target} zikir tamamlandƒ±. M√ºkemmel!`);
        }

        function updateDisplay() {
            document.getElementById('countDisplay').textContent = counter;
            document.getElementById('targetDisplay').textContent = target;
            document.getElementById('roundDisplay').textContent = round;
            document.getElementById('totalDisplay').textContent = total.toLocaleString('tr-TR');

            // Update progress ring
            const progress = (counter / target) * 100;
            const circle = document.querySelector('.progress-ring-circle');
            const radius = 140;
            const circumference = 2 * Math.PI * radius;
            const offset = circumference - (progress / 100) * circumference;
            circle.style.strokeDashoffset = offset;

            // Update dhikr text
            document.getElementById('dhikrText').textContent = currentDhikr.arabic;
            document.getElementById('dhikrMeaning').textContent = currentDhikr.meaning;
        }

        function updateStats() {
            document.getElementById('todayCount').textContent = stats.today.toLocaleString('tr-TR');
            document.getElementById('weekCount').textContent = stats.week.toLocaleString('tr-TR');
            document.getElementById('allTimeCount').textContent = stats.allTime.toLocaleString('tr-TR');
            document.getElementById('streakCount').textContent = stats.streak;
        }

        function checkStreak() {
            const today = new Date().toDateString();
            const yesterday = new Date(Date.now() - 86400000).toDateString();
            
            if (stats.lastDate === today) {
                // Already counted today
            } else if (stats.lastDate === yesterday) {
                // Streak continues
                if (stats.today > 0) {
                    stats.streak++;
                }
            } else {
                // Streak broken
                stats.streak = 0;
            }
            
            saveData();
        }

        function selectDhikr(id, arabic, meaning, defaultTarget) {
            if (id === 'custom') {
                showCustomModal();
                return;
            }

            // Remove active class from all cards
            document.querySelectorAll('.dhikr-card').forEach(card => {
                card.classList.remove('active');
            });
            
            // Add active class to selected card
            event.target.closest('.dhikr-card').classList.add('active');

            currentDhikr = { id, arabic, meaning };
            target = defaultTarget;
            counter = 0;
            round = 0;

            saveData();
            updateDisplay();
        }

        function toggleVibration() {
            settings.vibration = !settings.vibration;
            updateSettingsUI();
            saveData();
            
            if (settings.vibration && 'vibrate' in navigator) {
                navigator.vibrate(100);
            }
        }

        function toggleSound() {
            settings.sound = !settings.sound;
            updateSettingsUI();
            saveData();
        }

        function updateSettingsUI() {
            const vibrateBtn = document.getElementById('vibrateBtn');
            const soundBtn = document.getElementById('soundBtn');

            if (settings.vibration) {
                vibrateBtn.classList.add('active');
            } else {
                vibrateBtn.classList.remove('active');
            }

            if (settings.sound) {
                soundBtn.classList.add('active');
            } else {
                soundBtn.classList.remove('active');
            }
        }

        function showTargetModal() {
            document.getElementById('targetInput').value = target;
            document.getElementById('targetModal').style.display = 'flex';
        }

        function closeTargetModal() {
            document.getElementById('targetModal').style.display = 'none';
        }

        function setQuickTarget(value) {
            document.getElementById('targetInput').value = value;
        }

        function saveTarget() {
            const newTarget = parseInt(document.getElementById('targetInput').value);
            if (newTarget > 0 && newTarget <= 10000) {
                target = newTarget;
                counter = 0;
                saveData();
                updateDisplay();
                closeTargetModal();
            }
        }

        function showCustomModal() {
            document.getElementById('customModal').style.display = 'flex';
        }

        function closeCustomModal() {
            document.getElementById('customModal').style.display = 'none';
        }

        function saveCustomDhikr() {
            const arabic = document.getElementById('customArabic').value.trim();
            const meaning = document.getElementById('customMeaning').value.trim();
            const customTarget = parseInt(document.getElementById('customTarget').value);

            if (arabic && meaning && customTarget > 0) {
                currentDhikr = { id: 'custom', arabic, meaning };
                target = customTarget;
                counter = 0;
                round = 0;
                
                saveData();
                updateDisplay();
                closeCustomModal();
            } else {
                alert('L√ºtfen t√ºm alanlarƒ± doldurun!');
            }
        }

        function animateButton() {
            const button = document.getElementById('countButton');
            button.classList.add('clicked');
            setTimeout(() => button.classList.remove('clicked'), 200);
        }

        function playClickSound() {
            // Simple beep sound using Web Audio API
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 800;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.1);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 0.1);
        }

        function playSuccessSound() {
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const notes = [523.25, 659.25, 783.99]; // C, E, G
            
            notes.forEach((freq, index) => {
                setTimeout(() => {
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    
                    oscillator.frequency.value = freq;
                    oscillator.type = 'sine';
                    
                    gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);
                    
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.3);
                }, index * 100);
            });
        }

        function showNotification(title, message) {
            if ('Notification' in window && Notification.permission === 'granted') {
                new Notification(title, { body: message, icon: '/icon-192x192.png' });
            }
        }

        function saveData() {
            localStorage.setItem(COUNTER_KEY, counter);
            localStorage.setItem(TOTAL_KEY, total);
            localStorage.setItem(ROUND_KEY, round);
            localStorage.setItem(TARGET_KEY, target);
            localStorage.setItem(STATS_KEY, JSON.stringify(stats));
            localStorage.setItem(SETTINGS_KEY, JSON.stringify(settings));
            localStorage.setItem(CURRENT_DHIKR_KEY, JSON.stringify(currentDhikr));
            updateStats();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.code === 'Space') {
                e.preventDefault();
                incrementCounter();
            } else if (e.code === 'KeyR' && e.ctrlKey) {
                e.preventDefault();
                resetCounter();
            }
        });

        // Close modals on outside click
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        };
    </script>

