            stroke-dashoffset: 879.646;
            transition: stroke-dashoffset 0.3s ease;
        }

        .counter-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        .count-display {
            font-size: 4rem;
            font-weight: bold;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .target-display {
            font-size: 1.5rem;
            color: var(--text-secondary);
        }

        .progress-status {
            display: flex;
            justify-content: center;
            gap: 3rem;
            margin: 2rem 0;
        }

        .status-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.1rem;
            color: var(--text-secondary);
        }

        .status-item i {
            color: #667eea;
        }

        .status-item strong {
            color: var(--text-primary);
        }

        /* Count Button */
        .count-button {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin: 2rem auto;
            box-shadow: 0 10px 40px rgba(102, 126, 234, 0.5);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .count-button:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 50px rgba(102, 126, 234, 0.6);
        }

        .count-button:active,
        .count-button.clicked {
            transform: scale(0.95);
        }

        .count-button i {
            font-size: 3rem;
        }

        .ripple {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.6);
            transform: scale(0);
            animation: ripple-animation 0.6s ease-out;
        }

        @keyframes ripple-animation {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }

        /* Control Buttons */
        .control-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .control-btn {
            padding: 0.75rem 1.5rem;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-color);
            color: var(--text-primary);
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .control-btn:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
        }

        .control-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
        }

        /* Preset Dhikr */
        .preset-dhikr-section {
            margin-bottom: 2rem;
        }

        .preset-dhikr-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .dhikr-presets {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }

        .dhikr-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s;
            box-shadow: var(--shadow);
        }

        .dhikr-card:hover {
            transform: translateY(-5px);
            border-color: #667eea;
        }

        .dhikr-card.active {
            border-color: #667eea;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        }

        .dhikr-arabic {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }

        .dhikr-tr {
            font-size: 1rem;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .dhikr-count {
            font-size: 0.9rem;
            color: #667eea;
            font-weight: 600;
        }

        .dhikr-custom {
            font-size: 3rem;
            color: #667eea;
            margin-bottom: 0.5rem;
        }

        /* Stats */
        .stats-section {
            margin-bottom: 2rem;
        }

        .stats-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .stat-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            box-shadow: var(--shadow);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }

        .stat-icon.today { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
        .stat-icon.week { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
        .stat-icon.total { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .stat-icon.streak { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }

        .stat-content h4 {
            font-size: 2rem;
            margin: 0;
            color: var(--text-primary);
        }

        .stat-content p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

        .modal-content {
            background: var(--card-bg);
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            max-height: 80vh;
            overflow-y: auto;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }

        .modal-header h3 {
            margin: 0;
            color: var(--text-primary);
        }

        .close-modal {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-body label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
            font-weight: 600;
        }

        .modal-body input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 1rem;
            background: var(--bg-color);
            color: var(--text-primary);
        }

        .quick-targets {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .quick-targets button {
            padding: 0.5rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-color);
            color: var(--text-primary);
            cursor: pointer;
            font-weight: 600;
        }

        .quick-targets button:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .modal-footer {
            padding: 1.5rem;
            border-top: 1px solid var(--border-color);
            text-align: right;
        }

        .btn-save {
            padding: 0.75rem 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        /* SVG Gradient */
        svg defs {
            display: none;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .tasbih-header h1 {
                font-size: 2rem;
            }

            .count-button {
                width: 150px;
                height: 150px;
            }

            .count-display {
                font-size: 3rem;
            }

            .current-dhikr h2 {
                font-size: 2rem;
            }

            .progress-status {
                flex-direction: column;
                gap: 1rem;
            }

            .dhikr-presets {
                grid-template-columns: 1fr;
            }
        }
