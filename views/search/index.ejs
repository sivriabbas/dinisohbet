    <script>
        // Arama ge√ßmi≈üi y√∂netimi
        const MAX_HISTORY = 10;

        // Sayfa y√ºklendiƒüinde ge√ßmi≈üi g√∂ster
        document.addEventListener('DOMContentLoaded', function() {
            loadSearchHistory();
            
            // Input focus olduƒüunda ge√ßmi≈üi g√∂ster
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('focus', function() {
                const history = getSearchHistory();
                if (history.length > 0) {
                    document.getElementById('searchHistory').style.display = 'block';
                }
            });

            // Sayfa tƒ±klandƒ±ƒüƒ±nda ge√ßmi≈üi gizle
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.search-history') && !e.target.closest('#searchInput')) {
                    document.getElementById('searchHistory').style.display = 'none';
                }
            });
        });

        // Arama ge√ßmi≈üini localStorage'dan al
        function getSearchHistory() {
            const history = localStorage.getItem('searchHistory');
            return history ? JSON.parse(history) : [];
        }

        // Arama ge√ßmi≈üine ekle
        function addToHistory(query, type) {
            if (!query) return;
            
            let history = getSearchHistory();
            
            // Aynƒ± aramayƒ± tekrar ekleme
            history = history.filter(item => item.query !== query || item.type !== type);
            
            // Yeni aramayƒ± ba≈üa ekle
            history.unshift({
                query: query,
                type: type,
                timestamp: new Date().toISOString()
            });
            
            // Maksimum sayƒ±yƒ± a≈üma
            if (history.length > MAX_HISTORY) {
                history = history.slice(0, MAX_HISTORY);
            }
            
            localStorage.setItem('searchHistory', JSON.stringify(history));
        }

        // Arama ge√ßmi≈üini y√ºkle ve g√∂ster
        function loadSearchHistory() {
            const history = getSearchHistory();
            const historyItems = document.getElementById('historyItems');
            
            if (history.length === 0) {
                document.getElementById('searchHistory').style.display = 'none';
                return;
            }
            
            historyItems.innerHTML = history.map(item => `
                <a href="/search?q=${encodeURIComponent(item.query)}&type=${item.type}" class="history-item">
                    <i class="fas fa-history"></i>
                    <span class="history-query">${escapeHtml(item.query)}</span>
                    <span class="history-type">${getTypeLabel(item.type)}</span>
                    <span class="history-time">${getTimeAgo(item.timestamp)}</span>
                </a>
            `).join('');
        }

        // Arama ge√ßmi≈üini temizle
        function clearHistory() {
            localStorage.removeItem('searchHistory');
            document.getElementById('searchHistory').style.display = 'none';
            document.getElementById('historyItems').innerHTML = '';
        }

        // Aramayƒ± temizle
        function clearSearch() {
            window.location.href = '/search';
        }

        // Form submit edildiƒüinde ge√ßmi≈üe ekle
        document.getElementById('searchForm').addEventListener('submit', function(e) {
            const query = document.getElementById('searchInput').value.trim();
            const type = document.querySelector('input[name="type"]:checked').value;
            
            if (query) {
                addToHistory(query, type);
            }
        });

        // Tip etiketini al
        function getTypeLabel(type) {
            const labels = {
                'all': 'T√ºm√º',
                'quran': 'Kuran',
                'hadith': 'Hadis',
                'dua': 'Dua'
            };
            return labels[type] || type;
        }

        // Zaman farkƒ±nƒ± hesapla
        function getTimeAgo(timestamp) {
            const now = new Date();
            const past = new Date(timestamp);
            const diffMs = now - past;
            const diffMins = Math.floor(diffMs / 60000);
            
            if (diffMins < 1) return 'Az √∂nce';
            if (diffMins < 60) return diffMins + ' dk √∂nce';
            
            const diffHours = Math.floor(diffMins / 60);
            if (diffHours < 24) return diffHours + ' sa √∂nce';
            
            const diffDays = Math.floor(diffHours / 24);
            return diffDays + ' g√ºn √∂nce';
        }

        // HTML escape
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Klavye kƒ±sayollarƒ±
        document.addEventListener('keydown', function(e) {
            // Ctrl/Cmd + K = Arama odakla
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }
        });
    </script>

