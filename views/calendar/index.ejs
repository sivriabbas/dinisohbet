        }

        .card-content h3 {
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .date-display {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--text-primary);
            margin-bottom: 0.25rem;
        }

        .day-name,
        .day-info {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        /* Converter */
        .converter-section {
            margin-bottom: 3rem;
        }

        .converter-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .converter-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }

        .converter-box {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: var(--shadow);
        }

        .converter-box h4 {
            color: var(--text-primary);
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .date-input-group {
            display: grid;
            grid-template-columns: 1fr 2fr 1.5fr;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .date-input-group input,
        .date-input-group select {
            padding: 0.75rem;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-color);
            color: var(--text-primary);
            font-size: 1rem;
        }

        .btn-convert {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            transition: transform 0.2s;
        }

        .btn-convert:hover {
            transform: translateY(-2px);
        }

        .result-box {
            margin-top: 1rem;
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
        }

        .result-success {
            background: rgba(76, 175, 80, 0.1);
            color: #4CAF50;
            border: 2px solid #4CAF50;
        }

        .result-error {
            background: rgba(244, 67, 54, 0.1);
            color: #f44336;
            border: 2px solid #f44336;
        }

        /* Special Days */
        .special-days-section {
            margin-bottom: 3rem;
        }

        .special-days-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .special-days-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .special-day-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border-left: 4px solid;
            position: relative;
            transition: transform 0.3s;
        }

        .special-day-card:hover {
            transform: translateY(-5px);
        }

        .special-day-card.kandil { border-left-color: #FFD700; }
        .special-day-card.eid { border-left-color: #4CAF50; }
        .special-day-card.blessed { border-left-color: #9C27B0; }
        .special-day-card.special { border-left-color: #2196F3; }
        .special-day-card.past { opacity: 0.6; }

        .day-badge {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .special-day-card h4 {
            color: var(--text-primary);
            margin-bottom: 0.75rem;
            font-size: 1.1rem;
        }

        .hijri-date {
            color: #FFD700;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .gregorian-date {
            color: var(--text-secondary);
            font-size: 0.9rem;
            margin-bottom: 0.75rem;
        }

        .day-description {
            color: var(--text-secondary);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .countdown-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #4CAF50;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .past-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #757575;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        /* Months */
        .months-section {
            margin-bottom: 3rem;
        }

        .months-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .months-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .month-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: transform 0.3s;
        }

        .month-card:hover {
            transform: translateY(-5px);
        }

        .month-number {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .month-card h4 {
            color: var(--text-primary);
            margin-bottom: 0.75rem;
        }

        .month-card p {
            color: var(--text-secondary);
            font-size: 0.9rem;
            line-height: 1.5;
            margin-bottom: 1rem;
        }

        .month-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .month-badge.haram {
            background: rgba(244, 67, 54, 0.2);
            color: #f44336;
        }

        .month-badge.special {
            background: rgba(255, 215, 0, 0.2);
            color: #FFD700;
        }

        .month-badge.blessed {
            background: rgba(156, 39, 176, 0.2);
            color: #9C27B0;
        }

        /* Kandil Info */
        .kandil-info-section {
            margin-bottom: 3rem;
        }

        .kandil-info-section h3 {
            margin-bottom: 1.5rem;
            color: var(--text-primary);
        }

        .kandil-cards {
            display: grid;
            gap: 1.5rem;
        }

        .kandil-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            box-shadow: var(--shadow);
            border-left: 4px solid #FFD700;
        }

        .kandil-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .kandil-card h4 {
            color: #FFD700;
            margin-bottom: 0.5rem;
            font-size: 1.3rem;
        }

        .kandil-date {
            color: var(--text-secondary);
            font-style: italic;
            margin-bottom: 1rem;
        }

        .kandil-card p:last-child {
            color: var(--text-secondary);
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .calendar-header h1 {
                font-size: 2rem;
            }

            .today-section {
                grid-template-columns: 1fr;
            }

            .converter-container {
                grid-template-columns: 1fr;
            }

            .date-input-group {
                grid-template-columns: 1fr;
            }

            .special-days-grid,
            .months-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</body>
</html>
