    <script>
        // Ramazan tarihleri (2026 için - her yıl güncellenecek)
        const ramadanStart2026 = new Date('2026-02-17T00:00:00');
        const ramadanEnd2026 = new Date('2026-03-19T00:00:00');
        
        let currentWeek = 1;
        let isRamadan = false;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            checkRamadanStatus();
            updateCountdown();
            setInterval(updateCountdown, 1000);
            
            if (isRamadan) {
                getPrayerTimes();
                generateCalendar();
            }
        });

        function checkRamadanStatus() {
            const now = new Date();
            isRamadan = now >= ramadanStart2026 && now <= ramadanEnd2026;
            
            if (isRamadan) {
                document.getElementById('duringRamadan').style.display = 'block';
                document.getElementById('bannerTitle').textContent = 'Ramazan\'dan Kalan Gün';
            } else {
                document.getElementById('bannerTitle').textContent = 'Ramazan\'a Kalan Süre';
            }
        }

        function updateCountdown() {
            const now = new Date();
            const targetDate = isRamadan ? ramadanEnd2026 : ramadanStart2026;
            const diff = targetDate - now;

            if (diff <= 0) {
                checkRamadanStatus();
                return;
            }

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            document.getElementById('daysLarge').textContent = days;
            document.getElementById('hoursLarge').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutesLarge').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('secondsLarge').textContent = seconds.toString().padStart(2, '0');

            // Calculate Hijri date (approximate)
            updateHijriDate();
        }

        function updateHijriDate() {
            const now = new Date();
            // Simple approximation - in production, use proper Hijri calendar library
            const hijriYear = 1447;
            const hijriMonth = 'Şaban';
            const hijriDay = Math.floor((now - new Date('2025-01-01')) / (1000 * 60 * 60 * 24)) % 30 + 1;
            
            document.getElementById('hijriDate').textContent = 
                `Hicri Tarih: ${hijriDay} ${hijriMonth} ${hijriYear}`;
        }

        async function getPrayerTimes() {
            try {
                // Get user's location
                if ('geolocation' in navigator) {
                    navigator.geolocation.getCurrentPosition(async (position) => {
                        const lat = position.coords.latitude;
                        const lon = position.coords.longitude;
                        
                        // Fetch prayer times from Aladhan API
                        const response = await fetch(
                            `https://api.aladhan.com/v1/timings?latitude=${lat}&longitude=${lon}&method=13`
                        );
                        const data = await response.json();
                        
                        if (data.code === 200) {
                            const timings = data.data.timings;
                            
                            document.getElementById('imsakTime').textContent = timings.Imsak;
                            document.getElementById('iftarTime').textContent = timings.Maghrib;
                            
                            // Sahur is 10 minutes before Imsak
                            const imsakParts = timings.Imsak.split(':');
                            let sahurMinutes = parseInt(imsakParts[1]) - 10;
                            let sahurHours = parseInt(imsakParts[0]);
                            if (sahurMinutes < 0) {
                                sahurMinutes += 60;
                                sahurHours -= 1;
                            }
                            document.getElementById('sahurTime').textContent = 
                                `${sahurHours.toString().padStart(2, '0')}:${sahurMinutes.toString().padStart(2, '0')}`;
                            
                            updateTimeCountdowns(timings);
                        }
                    });
                }
            } catch (error) {
                console.error('Namaz vakitleri alınamadı:', error);
            }
        }

        function updateTimeCountdowns(timings) {
            setInterval(() => {
                const now = new Date();
                const currentTime = now.getHours() * 60 + now.getMinutes();
                
                const imsakParts = timings.Imsak.split(':');
                const imsakMinutes = parseInt(imsakParts[0]) * 60 + parseInt(imsakParts[1]);
                
                const iftarParts = timings.Maghrib.split(':');
                const iftarMinutes = parseInt(iftarParts[0]) * 60 + parseInt(iftarParts[1]);
                
                // Imsak countdown
                if (currentTime < imsakMinutes) {
                    const diff = imsakMinutes - currentTime;
                    const hours = Math.floor(diff / 60);
                    const mins = diff % 60;
                    document.getElementById('imsakCountdown').textContent = 
                        `${hours}s ${mins}dk kaldı`;
                }
                
                // Iftar countdown
                if (currentTime < iftarMinutes) {
                    const diff = iftarMinutes - currentTime;
                    const hours = Math.floor(diff / 60);
                    const mins = diff % 60;
                    document.getElementById('iftarCountdown').textContent = 
                        `${hours}s ${mins}dk kaldı`;
                }
            }, 60000); // Update every minute
        }

        function generateCalendar() {
            const calendarGrid = document.getElementById('calendarGrid');
            calendarGrid.innerHTML = '';
            
            const startDay = (currentWeek - 1) * 7 + 1;
            const endDay = Math.min(startDay + 6, 30);
            
            for (let day = startDay; day <= endDay; day++) {
                const dayCard = document.createElement('div');
                dayCard.className = 'calendar-day';
                
                const today = new Date();
                const ramadanDay = Math.floor((today - ramadanStart2026) / (1000 * 60 * 60 * 24)) + 1;
                
                if (isRamadan && day === ramadanDay) {
                    dayCard.classList.add('today');
                }
                
                dayCard.innerHTML = `
                    <div class="day-number">${day}</div>
                    <div class="day-label">Ramazan</div>
                    ${day >= 21 && day % 2 === 1 ? '<div class="kadir-badge">⭐</div>' : ''}
                `;
                
                calendarGrid.appendChild(dayCard);
            }
            
            document.getElementById('weekRange').textContent = `${startDay}-${endDay} Ramazan`;
        }

        function previousWeek() {
            if (currentWeek > 1) {
                currentWeek--;
                generateCalendar();
            }
        }

        function nextWeek() {
            if (currentWeek < 5) {
                currentWeek++;
                generateCalendar();
            }
        }

        function playPrayer(type) {
            // Simple audio feedback
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = 600;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 1);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + 1);
            
            // Show notification
            alert(`${type === 'iftar' ? 'İftar' : 'Sahur'} duası okunacak...`);
        }
    </script>

