<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.username %> - Dini Sohbet</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <main class="main-content">
        <div class="container">
            <div class="profile-container">
                <div class="profile-header">
                    <img src="<%= profileUser.avatar || '/images/default-avatar.png' %>" alt="<%= profileUser.username %>" class="profile-avatar">
                    <div class="profile-info">
                        <h1><%= profileUser.username %></h1>
                        <% if (profileUser.bio) { %>
                            <p class="profile-bio"><%= profileUser.bio %></p>
                        <% } %>
                        <p class="profile-join-date">
                            <i class="fas fa-calendar"></i> 
                            <%= new Date(profileUser.createdAt).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long' }) %> tarihinde katıldı
                        </p>
                        <% if (user && user.id === profileUser._id.toString()) { %>
                            <a href="/users/<%= profileUser.username %>/edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Profili Düzenle
                            </a>
                        <% } %>
                    </div>
                </div>

                <div class="profile-content">
                    <h2>Paylaşımları (<%= posts.length %>)</h2>
                    <% if (posts && posts.length > 0) { %>
                        <div class="posts-list">
                            <% posts.forEach(post => { %>
                                <div class="post-card">
                                    <div class="post-header">
                                        <div class="post-author">
                                            <img src="<%= post.author.avatar || '/images/default-avatar.png' %>" alt="<%= post.author.username %>">
                                            <div>
                                                <a href="/users/<%= post.author.username %>"><%= post.author.username %></a>
                                                <span class="post-date"><%= new Date(post.createdAt).toLocaleDateString('tr-TR') %></span>
                                            </div>
                                        </div>
                                        <span class="post-category <%= post.category %>"><%= post.category %></span>
                                    </div>
                                    <div class="post-content">
                                        <h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
                                        <p><%= post.content.substring(0, 150) %>...</p>
                                    </div>
                                    <div class="post-footer">
                                        <span><i class="fas fa-heart"></i> <%= post.likes.length %></span>
                                        <span><i class="fas fa-comment"></i> <%= post.comments.length %></span>
                                        <span><i class="fas fa-eye"></i> <%= post.viewCount %></span>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="no-posts">Henüz paylaşım yok.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
