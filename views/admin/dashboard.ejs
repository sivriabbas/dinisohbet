<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - DiniSohbet</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/main-styles.css">
    <style>
        .admin-dashboard { padding: 40px 20px; max-width: 1400px; margin: 0 auto; }
        .admin-stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 40px; }
        .stat-card { background: linear-gradient(135deg, #667eea, #764ba2); color: white; padding: 30px; border-radius: 15px; }
        .stat-value { font-size: 3rem; font-weight: 700; }
        .stat-label { font-size: 1.1rem; opacity: 0.9; }
        .admin-section { background: white; padding: 30px; border-radius: 15px; margin-bottom: 30px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); }
        .admin-section h2 { margin: 0 0 20px 0; color: #333; }
        .pending-item { padding: 15px; border: 1px solid #e0e0e0; border-radius: 8px; margin-bottom: 10px; }
        .action-btn { padding: 8px 16px; border: none; border-radius: 5px; cursor: pointer; margin-right: 10px; }
        .btn-approve { background: #4caf50; color: white; }
        .btn-reject { background: #f44336; color: white; }
        .log-item { padding: 12px; background: #f5f5f5; border-radius: 5px; margin-bottom: 8px; font-size: 0.9rem; }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="admin-dashboard">
        <h1 style="margin-bottom: 30px;"><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>

        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-value"><%= stats.totalUsers %></div>
                <div class="stat-label">Total Users</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #f093fb, #f5576c);">
                <div class="stat-value"><%= stats.totalPosts %></div>
                <div class="stat-label">Total Posts</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
                <div class="stat-value"><%= stats.pendingPosts %></div>
                <div class="stat-label">Pending Posts</div>
            </div>
            <div class="stat-card" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
                <div class="stat-value"><%= stats.totalDuas %></div>
                <div class="stat-label">Total Duas</div>
            </div>
        </div>

        <div class="admin-section">
            <h2><i class="fas fa-clock"></i> Pending Posts (<%= pendingPosts.length %>)</h2>
            <% if (pendingPosts.length === 0) { %>
                <p style="color: #999;">No pending posts</p>
            <% } else { %>
                <% pendingPosts.forEach(post => { %>
                    <div class="pending-item">
                        <h3 style="margin: 0 0 10px 0;"><%= post.title %></h3>
                        <p style="margin: 0 0 10px 0; color: #666;"><%= post.content.substring(0, 150) %>...</p>
                        <p style="margin: 0 0 10px 0; font-size: 0.9rem;"><strong>Author:</strong> <%= post.author.username %></p>
                        <button class="action-btn btn-approve" onclick="approvePost('<%= post._id %>')">Approve</button>
                        <button class="action-btn btn-reject" onclick="rejectPost('<%= post._id %>')">Reject</button>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <div class="admin-section">
            <h2><i class="fas fa-history"></i> Recent Activity Logs</h2>
            <% recentLogs.forEach(log => { %>
                <div class="log-item">
                    <strong><%= log.admin.username %></strong> performed <strong><%= log.action %></strong> on <%= log.createdAt.toLocaleString() %>
                </div>
            <% }); %>
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a href="/admin/users" style="margin: 0 10px; padding: 12px 24px; background: #667eea; color: white; text-decoration: none; border-radius: 8px;">Manage Users</a>
            <a href="/admin/posts" style="margin: 0 10px; padding: 12px 24px; background: #f093fb; color: white; text-decoration: none; border-radius: 8px;">All Posts</a>
            <a href="/admin/logs" style="margin: 0 10px; padding: 12px 24px; background: #4facfe; color: white; text-decoration: none; border-radius: 8px;">View Logs</a>
        </div>
    </div>

    <script>
        async function approvePost(id) {
            const res = await fetch(`/admin/posts/${id}/approve`, { method: 'POST' });
            if (res.ok) location.reload();
        }
        async function rejectPost(id) {
            const res = await fetch(`/admin/posts/${id}/reject`, { method: 'POST' });
            if (res.ok) location.reload();
        }
    </script>
</body>
</html>
